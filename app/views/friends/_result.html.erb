<div class="results-block messages-block">
  <%= render 'layouts/messages'%>
</div>

<% if @friends %>
<div class="card card-header results-block">
  <table class="col-md-12">
    <tbody>
      <tr>
        <% @friends.each do |friend| %>
        <td><strong>Name</strong> <%= friend.full_name %></td>
        <td><strong>Email</strong> <%= friend.email %></td>
        <td><strong>Actions</strong> <%= link_to "View Profile" ,'#', class: "btn btn-sm btn-outline-info " %></td>
        <td><%= link_to 'Follow', '#', class: "btn btn-xs btn-outline-success", method: :post %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
<% end %>